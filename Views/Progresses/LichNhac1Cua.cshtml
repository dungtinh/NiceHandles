@model Int32
@using NiceHandles.Models
@{
    var db = new NHModel();
    var progress = db.Progresses.FirstOrDefault(x => x.type == (int)XProgress.eType.GhiChu);
    var hoso_id = db.di1cua.Where(x => x.id == Model).Select(x => x.hoso_id).Single();
}
<section id="ss@("_" + progress.type + hoso_id)">
    <h4>LỊCH NHẮC NHỚ SAU 1 CỬA</h4>
    <div class="row alarm">
        <div class="col-md-2" style="text-align: right;">
            <p> <i class="fa fa-alarm-clock icon"></i></p>
            <p>Nội dung </p>
            <p>Ngày nhắc </p>
        </div>
        <div class="col-md-6">
            <p> <strong><i>Lịch nhắc nhớ</i></strong></p>
            <p> <input type="text" class="form-control" name="viecphailam_name" /></p>
            <p>
                <input type="text" class="datetime form-control" name="viecphailam_time" autocomplete="off" style="width: 200px; display: inline; margin-right: 10px;" />
                <button class="btn btn-primary" onclick="TaoLich( @hoso_id, @((int)XProgress.eType.GhiChu ));">Tạo lịch</button>
            </p>
        </div>
        <div class="col-md-4">
            <div class="note">
                <i class="fal fa-lightbulb-on icon" style="color: crimson;"></i>
                <i>  @progress.note</i>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-2">
            <label>Nhật ký nhắc nhớ</label>
        </div>
        <div class="col-md-10 col-md-offset-2">
            <div class="row" name="viecphailam">

            </div>
        </div>
    </div>
</section>