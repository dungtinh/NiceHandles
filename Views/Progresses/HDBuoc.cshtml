@model NiceHandles.Models.HoSo
@using NiceHandles.Models
@{
    var db = new NHModel();
    var step = db.Steps.Find(Model.step_id);
}
<section id="ssHDBuoc" class="progressfile">
    <fieldset style="background-color: aliceblue;">
        <div class="progress_header">
            <div class="row" style="margin: 0;">
                <div class="col-sm-9 title">
                    <span class="fa fa-arrow-right"> Hướng dẫn bước thực hiện: @(step !=null? step.name: null) </span>
                </div>
                <div class="col-sm-3 tool">
                    <a onclick=""> <i class="fad fa-cogs"></i></a>
                    <a data-toggle="collapse" href="#ssHDBuoc .collapse" role="button" aria-expanded="false" aria-controls="#ssHDBuoc .collapse">
                        <i onclick="UpDownPanel(this)" class="fa fa-angle-down" style="padding-right: 10px;"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="progress_body collapse">
            <div style="padding: 3px 10px; margin-bottom: 10px;">
                @Html.Raw(step != null ? step.description : null)
            </div>
        </div>
    </fieldset>
</section>