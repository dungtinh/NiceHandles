@model Int32
@using NiceHandles.Models
@{
    var db = new NHModel();
    var processing = db.wf_hoso.Where(x => x.hoso_id == Model).OrderByDescending(x => x.time);
}
<section id="ss@("_" + (int)XProgress.eType.GhiChu + Model)" class="progressfile">
    <h4>Ghi chú sự kiện</h4>
    <div class="row text-danger">
        <div class="col-sm-10">
            <div class="form-group">
                <input type="text" class="form-control" id="txtProcessing" placeholder="Bạn đang thực hiện việc gì" />
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <input type="button" value="Cập nhật" onclick="UpdateProcessing(@Model, '#txtProcessing')" class="btn btn-danger" />
            </div>
        </div>
        <ul id="ulProcessing">
            @foreach (var item in processing)
            {
                var us = db.Accounts.Single(x => x.id == item.account_id);
                <li><span>@item.time.ToString("dd/MM/yy")</span> | <span>@us.fullname</span> | @item.note</li>
            }
        </ul>
    </div>
</section>