@model NiceHandles.Models.donthu

<h4 style="text-align: center;">@Model.name</h4>
<hr />
<div class="form-horizontal">
    <div class="row" id="vbHoiAm">

        <div class="form-group">
            @Html.Label("VB hồi âm", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <input type="file" class="btn btn-info txtFile" style="width: 100%;" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Tiêu đề", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <input class="form-control" id="txtVBHATieuDe" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Ngày nhận", htmlAttributes: new { @class = "control-label col-md-4 datetime" })
            <div class="col-md-6">
                <input class="form-control datetime" id="txtVBHANgayNhan" autocomplete="off" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nội dung", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <input class="form-control" id="txtVBHANoiDung" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-6">
                <input value="Upload" type="button" onclick="UploadVBHoiAm('#vbHoiAm .txtFile', @(Model.id), @((int)NiceHandles.Models.XProgress.eType.DonThu));" class="btn btn-info" />
            </div>
        </div>
    </div>
</div>