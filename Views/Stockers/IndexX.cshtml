@model PagedList.IPagedList<NiceHandles.Models.Stocker>
@using PagedList.Mvc;
@using NiceHandles.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var db = new NHModel();
}

<h2>
