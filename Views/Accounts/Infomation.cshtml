@model NiceHandles.Models.Account

@{
    ViewBag.Title = "Chi tiết";
}

<h2>Thông tin cá nhân</h2>

<div>
    <h4>@Model.fullname</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Số điện thoại
        </dt>
        <dd>
            @Model.phoneno
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Model.email
        </dd>
        <dt>
            Lương
        </dt>
        <dd>
            @Model.luong.ToString("N0")
        </dd>
        <dt>
            Phụ cấp
        </dt>
        <dd>
            @Model.phucap.ToString("N0")
        </dd>
        <dt>
            Ngân hàng sử dụng
        </dt>
        <dd>
            @Model.bank_name
        </dd>
        <dt>
            Số tài khoản
        </dt>
        <dd>
            @Model.bankno
        </dd>
        <dt>
            Ngày sinh
        </dt>
        <dd>
            @(Model.birthday.HasValue?Model.birthday.Value.ToString("dd/MM/yyyy"): "")
        </dd>
        <dt>
            Hộ khẩu thường trú
        </dt>
        <dd>
            @Model.hktt
        </dd>
        <dt>
            Căn cước công dân
        </dt>
        <dd>
            @Model.sogiayto
        </dd>
        <dt>
            Ngày cấp
        </dt>
        <dd>
            @(Model.ngaycap_gt.HasValue? Model.ngaycap_gt.Value.ToString("dd/MM/yyyy"): "")
        </dd>
        <dt>
            Nơi cấp
        </dt>
        <dd>
            @Model.noicap_gt
        </dd>
    </dl>
</div>

