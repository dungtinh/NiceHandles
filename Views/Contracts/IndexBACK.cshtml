@model PagedList.IPagedList<NiceHandles.Models.XContract>
@using PagedList.Mvc;
@using NiceHandles.Models

@{
    ViewBag.Title = "Hợp đồng";
}

<h2>Hợp đồng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
@using (Html.BeginForm("Index", "Contracts", FormMethod.Get))
{
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @class = "form-control", placeholder = "Tìm kiếm" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("add", ViewBag.ADDRESS as SelectList, "--- Địa chỉ ---", new { @class = "form-control", title = "Địa chỉ" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("ser", ViewBag.SERVICES as SelectList, "--- Dịch vụ ---", new { @class = "form-control", title = "Dịch vụ" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("par", ViewBag.PARTNER as SelectList, "--- Đối tác ---", new { @class = "form-control", title = "Đối tác" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("sta", ViewBag.STATUS as SelectList, "--- Trạng thái ---", new { @class = "form-control", title = "Trạng thái" })
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <button type="submit" class="btn btn-danger" style="height: 32px; width: 100px;">Tìm kiếm</button>
            </div>
        </div>
    </div>
}
<table class="table table-hover">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Giá trị HD
        </th>
        <th>
            Dự kiến chi
        </th>
        <th>
            Đã thu
        </th>
        <th>
            Đã chi
        </th>
        <th>
            Phải thu
        </th>
        <th>
            Thu - chi
        </th>
        @*<th>
                Lợi nhuận
            </th>*@
        <th>
            Ngày nhận
        </th>
        <th>
            Ngày hạn
        </th>
        <th>
            Trạng thái
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.customer_name, "Details", new { id = item.obj.id })
            </td>
            <td>
                @Html.ActionLink(item.address_name, "Details", new { id = item.obj.id })
            </td>
            <td>
                @item.obj.amount.ToString("N0")
            </td>
            <td>
                @item.obj.consuming.ToString("N0")
            </td>
            <td class="text-success">
                @item.taked_amount.ToString("N0")
            </td>
            <td class="text-danger">
                @item.spent_amount.ToString("N0")
            </td>
            <td>
                @item.remaining_amount.ToString("N0")
            </td>
            <td>
                @item.profit_amount.ToString("N0")
            </td>
            @*<td>
                    @item.benefit_amount.ToString("N0")
                </td>*@
            <td>
                @item.obj.time.ToString("dd/MM/yyyy")
            </td>
            <td>
                @if (item.obj.exp.HasValue)
                {
                    if (item.obj.exp.Value < DateTime.Now && item.obj.status == (int)Xwf_contract.eStatus.Processing)
                    {
                        <i style="color: red">
                            @item.obj.exp.Value.ToString("dd/MM/yyyy")
                        </i>
                    }
                    else
                    {
                        @item.obj.exp.Value.ToString("dd/MM/yyyy")
                    }
                }
            </td>
            <td>
                @( XContract.sStatus[item.obj.status])
            </td>
            <td>
                @if (item.obj.status == (int)XContract.eStatus.Processing)
                {
                    @Html.ActionLink("Thu chi ", "Create", "InOuts", new { id = item.obj.id }, new { style = "background-color:aliceblue;color:deeppink;" })
                    @Html.Raw(" |")
                    @Html.ActionLink("Sửa", "Edit", new { id = item.obj.id })
                    @Html.Raw(" |")
                    @Html.ActionLink("Xóa", "Delete", new { id = item.obj.id })
                }
            </td>
        </tr>
    }
</table>
@if (Model.PageCount > 1)
{
    <div class="row" style="margin-top: 10px;">
        <div class="col-sm-1">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        </div>
        <div class="col-sm-10">
            @Html.PagedListPager(Model, Page_No => Url.Action("Index", new { Page_No, Filter_Value = ViewBag.FilterValue, add = ViewBag.ADD, ser = ViewBag.SER, par = ViewBag.PAR, sta = ViewBag.STA }))
        </div>
    </div>
}