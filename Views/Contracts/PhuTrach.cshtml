@model PagedList.IPagedList<NiceHandles.Models.DSBanLamViec>
@using PagedList.Mvc;
@using NiceHandles.Models

@{
    ViewBag.Title = "DS hồ sơ đang phụ trách";
    var db = (NiceHandles.Models.NHModel)ViewBag.db;
    //var accounts = db.Accounts.Where(x => x.hasNote == (int)XModels.eYesNo.Yes).ToArray();
}
<br />

<h2>DS hồ sơ đang phụ trách</h2>

<p style="text-align: right;">
    <button class="btn btn-warning" onclick="DailyReport();">Báo cáo</button>
    <button type="button" class="btn btn-primary" onclick="DSCongViec();">DS công việc</button>
</p>

@using (Html.BeginForm("PhuTrach", "Contracts", FormMethod.Get))
{
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @class = "form-control", placeholder = "Tìm kiếm" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("ste", ViewBag.STEPS as SelectList, "--- Bước thực hiện ---", new { @class = "form-control", title = "Bước thực hiện" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("add", ViewBag.ADDRESS as SelectList, "--- Địa chỉ ---", new { @class = "form-control", title = "Địa chỉ" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("ser", ViewBag.SERVICES as SelectList, "--- Dịch vụ ---", new { @class = "form-control", title = "Dịch vụ" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("par", ViewBag.PARTNER as SelectList, "--- Đối tác ---", new { @class = "form-control", title = "Đối tác" })
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <button type="submit" class="btn btn-danger" style="height: 32px; width: 100px;">Tìm kiếm</button>
            </div>
        </div>
    </div>
}
<table class="table table-hover" id="blv">
    <thead>
        <tr>
            <th style="width: 25%;">
                Tên khách hàng
            </th>
            <th>
                Đối tác
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Dịch vụ
            </th>
            <th>
                Bước thực hiện
            </th>
            <th>
                Gia phả
            </th>
            <th>
                Ngày nhận
            </th>
            <th>
                Ngày hạn
            </th>
            <th>
                Ưu tiên
            </th>
            @*<th>
                </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var href = string.Empty;
            href = "<a href='/NhiemVus/?id=" + item.id + "&step=" + item.step + "'>" + item.customer_name + "</a>";
            <tr>
                <td>
                    @Html.Raw(href)
                    <a href='/Infomations/Edit?contract_id=@item.id' class="h"> - Nhập thông tin</a>
                </td>
                <td>
                    @item.partner_name
                </td>
                <td>
                    @item.sodienthoai
                </td>
                <td>
                    @item.address_name
                </td>
                <td>
                    @item.service_name
                </td>
                <td style="color: @item.step_color">
                    @item.step_name
                </td>
                <td>
                    @if (item.hasfile.HasValue)
                    {
                        @Html.ActionLink("Xem", "GiaPha", "Home", new { c = item.id }, new { @class = "far fa-eye" })
                    }
                    else
                    {
                        <i>---</i>
                    }

                </td>
                <td>
                    @item.time.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @if (item.exp.HasValue)
                    {
                        if (item.exp.Value < DateTime.Now && item.status == (int)Xwf_contract.eStatus.Processing)
                        {
                            <i style="color: red">
                                @item.exp.Value.ToString("dd/MM/yyyy")
                            </i>
                        }
                        else
                        {
                            @item.exp.Value.ToString("dd/MM/yyyy")
                        }
                    }
                </td>
                <td>
                    @XContract.sPriority[item.Priority]
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.PageCount > 1)
{
    <div class="row" style="margin-top: 10px;">
        <div class="col-sm-1">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        </div>
        <div class="col-sm-10">
            @Html.PagedListPager(Model, Page_No => Url.Action("PhuTrach", new { Page_No, Filter_Value = ViewBag.FilterValue, add = ViewBag.ADD, ser = ViewBag.SER, par = ViewBag.PAR, ste = ViewBag.STEP }))
        </div>
    </div>
}

<iframe id="my_iframe" style="display:none;"></iframe>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        function DSCongViec() {
            $.ajax({
                url: '/Contracts/DSCongViec',
                type: "POST",
                dataType: "JSON",
                data: {},
                success: function (url) {
                    document.getElementById('my_iframe').src = url;
                },
                error: function () {
                    toastr.success("Phát sinh lỗi", "Không lấy được danh sách", { timeOut: 5000 });
                }
            });
        }
        function DailyReport() {
            $.ajax({
                url: '/Jobs/DailyReport',
                type: "POST",
                dataType: "JSON",
                data: {},
                success: function (data) {
                    document.getElementById('my_iframe').src = data;
                }
            });
        }
    </script>
}