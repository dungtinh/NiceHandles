
@model PagedList.IPagedList<NiceHandles.Models.Notice>
@using PagedList.Mvc;
@using NiceHandles.Models
@{
    ViewBag.Title = "Bảng thông báo";
}
<br />
<h4>BẢNG THÔNG BÁO</h4>
<div id="Notice">
    @using (Html.BeginForm("Notice", "Home", FormMethod.Get))
    {
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @class = "form-control", placeholder = "Tìm kiếm" })
                </div>
            </div>

            <div class="col-sm-1">
                <div class="form-group">
                    <button type="submit" class="btn btn-danger fa fa-search" style="height: 32px; width: 100px;">Tìm kiếm</button>
                </div>
            </div>
        </div>
    }
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.date.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.Raw(item.contents)
                </td>
            </tr>
        }
    </table>
    @if (Model.PageCount > 1)
    {
        <div class="row" style="margin-top: 10px;">
            <div class="col-sm-1">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>
            <div class="col-sm-10">
                @Html.PagedListPager(Model, Page_No => Url.Action("Notice", new { Page_No, Filter_Value = ViewBag.FilterValue }))
            </div>
        </div>
    }
</div>
