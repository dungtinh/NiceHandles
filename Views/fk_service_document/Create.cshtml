@model NiceHandles.Models.fk_service_document
@using NiceHandles.Models
@{
    ViewBag.Title = "Create";
}

<h2>Thêm mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Gắn hồ sơ vào dịch vụ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.service_id, new { @Value = ViewBag.id })
        <div class="form-group">
            @Html.Label("Hồ sơ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.document_id, ViewBag.Documents as IQueryable<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.document_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Chấp nhận" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Về danh sách", "Index", new { id = ViewBag.id })
</div>
