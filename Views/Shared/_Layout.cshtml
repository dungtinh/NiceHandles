                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Đào tạo", "DaoTao", "TaiLieux", null, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                <p style="padding: 10px 5px 5px 10px;"><i class="fa fa-ballot-check"> Báo cáo - quản lý</i></p>
                                @Html.ActionLink("Chấm công", "MonthlyAttendance", "Attendance", null, new { @class = "dropdown-item" })
