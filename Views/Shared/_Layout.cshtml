                                    @Html.ActionLink("DS theo dõi đôn đốc", "theodoichi", "InOutChoDuyets", null, new { @class = "dropdown-item" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Công nợ", "CongNo", "InOuts", null, new { @class = "dropdown-item" })
                                    @*<div class="dropdown-divider"></div>
                                        @Html.ActionLink("Quỹ", "Index", "Stockers", null, new { @class = "dropdown-item" })*@
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Báo cáo tổng hợp", "BieuDoThuChi", "InOuts", null, new { @class = "dropdown-item" })
