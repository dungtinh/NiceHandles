                                @Html.ActionLink("Quỹ tiêu", "Index", "thuchis", null, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager") || User.IsInRole("Accounting"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Hồ sơ
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @Html.ActionLink("Quản lý hồ sơ", "index", "hosoes", new { group = (int)NiceHandles.Models.XHoSo.eView.Manager }, new { @class = "dropdown-item" })
