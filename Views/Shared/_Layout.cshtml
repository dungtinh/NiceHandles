                                @Html.ActionLink("Thông báo", "Notice", "Home", null, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Hồ sơ của tôi", "Index", "Hosoes", null, new { @class = "dropdown-item", @style = "border: 1px solid #d9534f;" })
