                        <div class="form-group">
                            @Html.Label("Địa chỉ thường trú", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.a_hktt1, new { @class = "form-control", rel = "hktt", rows = 3, placeholder = "Nhập địa chỉ thường trú đầy đủ" })
                                @Html.ValidationMessageFor(model => model.a_hktt1, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <button type="button" id="cboSameAdress" class="btn btn-same-address">
                                    <i class="fa fa-copy"></i> Như trên
                                </button>
                            </div>
                        </div>

                        <!-- Giấy tờ tùy thân -->
                        <div class="form-group">
                            @Html.Label("Loại giấy tờ", new { @class = "control-label col-md-3" })
