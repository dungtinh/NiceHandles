@using NiceHandles.Models
@model NiceHandles.Models.Infomation
@{
    var db = new NHModel();
    var ThuaDats = db.ThuaDats.Where(x => x.infomation_id == Model.id).ToArray();
}
<section id="ssHopThua">
    <div id="thuadat">
        <h4>Hợp từ các thửa đất nào?</h4>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#HopThuaModal" onclick="ThemThuaDat()">
            Thêm thửa đất
        </button>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Số GCN</th>
                    <th>Số vào sổ</th>
                    <th>Số thửa</th>
                    <th>Tờ bản đồ</th>
                    <th>Diện tích</th>
                    <th>Ngày cấp</th>
                    <th>Nơi cấp</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ThuaDats as ThuaDat[])
                {
                    <tr id="@item.id">
                        <td>@item.sogiaychungnhan</td>
                        <td>@item.sovaoso</td>
                        <td>@item.sothua</td>
                        <td>@item.tobando</td>
                        <td>@item.dientich</td>
                        <td>@(item.ngaycap.HasValue?item.ngaycap.Value.ToString("dd/MM/yyyy"): null) </td>
                        <td>@item.noicap</td>
                        <td>
                            <a href='#' data-toggle="modal" data-target="#HopThuaModal" onclick="EditThuaDat(@item.id)">Sửa</a> |
                            <a href='#' onclick="XoaThuaDat(@item.id)">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="modal" tabindex="-1" role="dialog" id="HopThuaModal" aria-labelledby="ModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModalLabel">Thửa đất</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Đóng lại">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-horizontal">
                            <input type="hidden" id="txtid" />
                            <input type="hidden" id="txtinfomation_id" value="@Model.id" />
                            <input type="hidden" id="txttype" value="@((int)XInfomation.eService.HopThua)" />

                            <div class="form-group">
                                @Html.Label("Số giấy chứng nhận", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtsogiaychungnhan" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Số thửa", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtsothua" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Tờ bản đồ", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txttobando" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Địa chỉ thửa đất", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtdiachithuadat" class="form-control" />
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Diện tích", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtdientich" class="form-control" />
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Ngày cấp", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtngaycap" class="form-control datetime" autocomplete="off" />
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Nơi cấp", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtnoicap" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Số vào sổ", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtsovaoso" class="form-control" />
                                </div>
                            </div>

                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" onclick="fcSaveThuaDat()">Đồng ý</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng lại</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>