
@model PagedList.IPagedList<NiceHandles.Models.vCanBoDiaPhuongC1>
@using PagedList.Mvc;
@using NiceHandles.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var db = new NHModel();
    int XA = Convert.ToInt32(ViewBag.XA);
    var c2s = db.CanBoDiaPhuongs.Where(x => x.fk_id == XA && x.thuoccap == (int)XModels.eThuocCap.cap2);
}

<h2>Danh sách cán bộ địa phương</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>

@using (Html.BeginForm("Index", "CanBoDiaPhuongs", FormMethod.Get))
{
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @class = "form-control", placeholder = "Tìm kiếm" })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                @Html.DropDownList("address_id", new SelectList(db.Addresses, "id", "name", ViewBag.XA), "Chọn xã", new { @class = "form-control" })
            </div>
        </div>
        <div class="col-lg-2 col-sm-2 ">
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="height: 28px; width: 100px;">Tìm kiếm</button>
            </div>
        </div>
    </div>
}

<h4>CÁN BỘ CẤP XÃ/PHƯỜNG</h4>
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Chức vụ
        </th>
        <th>
            Gmap
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ghi chú
        </th>
        <th></th>
    </tr>

    @foreach (var item in c2s)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.chucvu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gmap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.note)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>

<h4>CÁN BỘ CẤP TỔ/THÔN</h4>

<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Chức vụ
        </th>
        <th>
            Gmap
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ghi chú
        </th>
        <th>
            Thôn
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.chucvu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gmap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DvhcName)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.id })
            </td>
        </tr>
    }
</table>
