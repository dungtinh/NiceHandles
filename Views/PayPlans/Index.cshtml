@model IEnumerable<NiceHandles.Models.vPayPlan>
@using PagedList.Mvc;
@using NiceHandles.Models

@{
    ViewBag.Title = "Index";
    if (ViewBag.contract_id != null)
    {
        Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>
    Đề xuất chi
    @Html.ActionLink("Chốt sổ", "Index", "chotsoes", null, new { style = "float: right;", @class = "btn btn-info" })
    @Html.ActionLink("Chuyển thủ quỹ", "GoStock", "InOuts", null, new { style = "float: right; margin-right: 10px;", @class = "btn btn-info" })
    <button type="button" style="float: right; margin-right: 10px;" class="btn btn-info" onclick="Print();">Bản in</button>
</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Người đề xuất
        </th>
        <th>
            Danh mục
        </th>
        <th>
            Số tiền
        </th>
        <th>
            Ghi chú
        </th>
        <th>
            Thời gian
        </th>
        <th>
            Tình trạng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category_name)
            </td>
            <td>
                @item.amount.ToString("N0")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.note)
            </td>
            <td>
                @item.time.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => NiceHandles.Models.XPayplan.sStatus[item.status])
            </td>
            <td>
                @if (item.status == (int)NiceHandles.Models.XModels.eStatus.Processing)
                {
                    @Html.ActionLink("Edit | ", "Edit", new { id = item.id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                }
            </td>
        </tr>
    }

</table>
