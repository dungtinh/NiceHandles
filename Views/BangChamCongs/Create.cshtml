@model IEnumerable<NiceHandles.Controllers.xChamCong>

@{
    ViewBag.Title = "Chấm công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chấm công</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Chấm công</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12" style="text-align: center;">
                <input type="submit" value="CHẤM CÔNG" class="btn btn-danger" style="height: 200px; width: 300px; font-size: xx-large" />
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            Ngày
        </th>
        <th>
            Giờ đến
        </th>
        <th>
            Giờ về
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.start.HasValue ? item.start.Value.ToShortDateString() : null)
            </td>
            <td>
                @Html.Raw(item.start.HasValue ? item.start.Value.ToString("HH:mm") : null)
            </td>
            <td>
                @Html.Raw(item.end.HasValue ? item.end.Value.ToString("HH:mm") : null)
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Về bàn làm việc", "BanLamViec", "Contracts")
</div>
