                <p style="padding-left: 8px;">
                    <strong>THU CHI TRONG HỒ SƠ</strong>
                    @Html.ActionLink("Thêm mới", "Create", "Categories", new { parent_id = (int)XCategory.eParent.KhachHang, type = (int)XCategory.eType.Chi }, new { @style = "float: right;" })
