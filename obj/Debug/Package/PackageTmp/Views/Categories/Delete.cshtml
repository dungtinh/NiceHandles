@model NiceHandles.Models.Category
@using NiceHandles.Models

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutSetting.cshtml";
}

<h2>Xóa</h2>

<div>   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Loại
        </dt>
        <dd>
            @XCategory.sType[Model.type]
        </dd>
        <dt>
            Nguồn
        </dt>
        <dd>
            @XCategory.sParent[Model.parent_id]
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Chấp nhận" class="btn btn-default" /> |
            @Html.ActionLink("Về danh sách", "Index")
        </div>
    }
</div>
