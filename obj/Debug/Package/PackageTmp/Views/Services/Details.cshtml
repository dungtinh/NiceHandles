@model NiceHandles.Models.Service
@using NiceHandles.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutSetting.cshtml";
}

<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Số tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.amount)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Về danh sách", "Index")
</p>
<h4>Hồ sơ</h4>
<hr />
<p>
    @Html.ActionLink("Thêm mới", "Create", "fk_service_document", new { id = Model.id }, null)
</p>
<table class="table table-hover">
    <tr>
        <th>
            Tên hồ sơ
        </th>
        <th></th>
    </tr>
    @foreach (var item in ViewBag.Documents as IQueryable<ServiceDocument>)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink("Xóa", "Delete", "fk_service_document", new { id = item.id }, null)
            </td>
        </tr>
    }

</table>
