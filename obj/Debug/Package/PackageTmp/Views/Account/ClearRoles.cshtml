
@model NiceHandles.Models.ApplicationUser
@{
    ViewBag.Title = "ClearRoles";
}

<h2>ClearRoles</h2>
@using (Html.BeginForm("ClearRoles", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Select user", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName", ViewBag.UserName as SelectList)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Assign role" />
        </div>
    </div>
}
