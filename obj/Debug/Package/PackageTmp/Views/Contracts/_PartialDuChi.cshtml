
@model NiceHandles.Models.xTemp
@using NiceHandles.Models
@{
    var db = new NHModel();
    var categories = db.Categories.Where(x => x.type == (int)XCategory.eType.Chi && x.parent_id == (int)XCategory.eParent.KhachHang).OrderBy(x => x.name).ToList();
    var lstCate1 = categories.Take(categories.Count() / 2);
    var lstCate2 = categories.Except(lstCate1).OrderBy(x => x.name);
}
<div id="mdlShowDuChi" class="modal" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document" style="width: 90%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="font-size: 16px; color: deeppink; text-align: center;">
                    CẬP NHẬT CÁC KHOẢN DỰ CHI ĐỂ TÍNH TỔNG
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            @foreach (var item in lstCate1)
                            {
                                var duchi = db.DuChis.SingleOrDefault(x => x.category_id == item.id);
                                <div class="col-md-8" style="text-align: right; line-height: 30px;">
                                    <span> @item.name:</span>
                                </div>
                                <div class="col-md-2">
                                    <input type="text" value="@(duchi!=null?  duchi.amount: 0)" class="form-control numberic txtduchi" />
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            @foreach (var item in lstCate2)
                            {
                                var duchi = db.DuChis.SingleOrDefault(x => x.category_id == item.id);
                                <div class="col-md-8" style="text-align: right; line-height: 30px;">
                                    <span> @item.name:</span>
                                </div>
                                <div class="col-md-2">
                                    <input type="text" value="@(duchi!=null?  duchi.amount: 0)" class="form-control numberic txtduchi" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-4" style="text-align: right;">
                        <label>Tổng dự chi:</label>
                    </div>
                    <div class="col-md-6">
                        <input id="sumDuChi" class="form-control numberic" type="text" style="width: 200px;background-color: antiquewhite; display:inline-block;" />
                        <button type="button" class="btn btn-primary" data-dismiss="modal" id="dongyduchi">Đồng ý</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng lại</button>
            </div>
        </div>
    </div>
</div>