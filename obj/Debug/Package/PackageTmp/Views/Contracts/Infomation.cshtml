@model PagedList.IPagedList<NiceHandles.Models.XContract>
@using PagedList.Mvc;
@using NiceHandles.Models

@{
    ViewBag.Title = "Hợp đồng";
}

<h2>Hợp đồng</h2>

@using (Html.BeginForm("Infomation", "Contracts", FormMethod.Get))
{
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @class = "form-control", placeholder = "Tìm kiếm" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                @Html.DropDownList("add", ViewBag.ADDRESS as SelectList, "--- Địa chỉ ---", new { @class = "form-control", title = "Địa chỉ" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                @Html.DropDownList("ser", ViewBag.SERVICES as SelectList, "--- Dịch vụ ---", new { @class = "form-control", title = "Dịch vụ" })
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="height: 28px; width: 100px;">Tìm kiếm</button>
            </div>
        </div>
    </div>
}
<table class="table table-hover">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Ngày nhận
        </th>
        <th>
            Ngày hạn
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.customer_name, "Edit", "Infomations", new { contract_id = item.obj.id }, null)
            </td>
            <td>
                @item.address_name
            </td>
            <td>
                @item.obj.time.ToString("dd/MM/yyyy")
            </td>
            <td>
                @if (item.obj.exp.HasValue)
                {
                    if (item.obj.exp.Value < DateTime.Now && item.obj.status == (int)Xwf_contract.eStatus.Processing)
                    {
                        <i style="color: red">
                            @item.obj.exp.Value.ToString("dd/MM/yyyy")
                        </i>
                    }
                    else
                    {
                        @item.obj.exp.Value.ToString("dd/MM/yyyy")
                    }
                }
            </td>
        </tr>
    }
</table>
@if (Model.PageCount > 1)
{
    <div class="row" style="margin-top: 10px;">
        <div class="col-sm-1">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        </div>
        <div class="col-sm-10">
            @Html.PagedListPager(Model, Page_No => Url.Action("Infomation", new { Page_No, Filter_Value = ViewBag.FilterValue, add = ViewBag.ADD, ser = ViewBag.SER }))
        </div>
    </div>
}