@using NiceHandles.Models
@model NiceHandles.Models.Infomation
<section id="ssTachThua">
    <div id="thuadat">
        <h4>Tách ra các thửa đất nào?</h4>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#TachThuaModal" onclick="{ $('#thuadat #txtid').val('');$('#thuadat #txtsogiaychungnhan').val(''); }">
            Thêm thửa đất
        </button>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Số GCN</th>
                    <th>Số vào sổ</th>
                    <th>Số thửa</th>
                    <th>Tờ bản đồ</th>
                    <th>Diện tích</th>
                    <th>Ngày cấp</th>
                    <th>Nơi cấp</th>
                    <th>Chủ sở hữu</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.ThuaDats as ThuaDat[])
                {
                    <tr id="@item.id">
                        <td>@item.sogiaychungnhan</td>
                        <td>@item.sovaoso</td>
                        <td>@item.sothua</td>
                        <td>@item.tobando</td>
                        <td>@item.dientich</td>
                        <td>@(item.ngaycap.HasValue?item.ngaycap.Value.ToString("dd/MM/yyyy"): null) </td>
                        <td>@item.noicap</td>
                        <td></td>
                        <td>
                            <a href='#' data-toggle="modal" data-target="#TachThuaModal" onclick="EditThuaDat(@item.id,'#ssTachThua')">Sửa</a> |
                            <a href='#' onclick="XoaThuaDat(@item.id,'#ssTachThua')">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="modal" tabindex="-1" role="dialog" id="TachThuaModal" aria-labelledby="ModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModalLabel">Thửa đất</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Đóng lại">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-horizontal">
                            <input type="hidden" id="txtid" />
                            <input type="hidden" id="txtinfomation_id" value="@Model.id" />
                            <input type="hidden" id="txttype" value="@((int)XInfomation.eService.TachThua)" />



                            <div class="form-group">
                                @Html.Label("Số thửa", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtsothua" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Tờ bản đồ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txttobando" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Địa chỉ thửa đất", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtdiachithuadat" class="form-control" />
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Diện tích", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtdientich" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Số giấy chứng nhận", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtsogiaychungnhan" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Số vào sổ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtsovaoso" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Ngày cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtngaycap" class="form-control datetime" />
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Nơi cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtnoicap" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Chủ sở hữu 1", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("tdcsh1", new SelectList((ThongTinCaNhan[])ViewBag.ThongTinCaNhans, "id", "hoten"), "-- Chọn chủ sở hữu --", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Chủ sở hữu 2", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("tdcsh2", new SelectList((ThongTinCaNhan[])ViewBag.ThongTinCaNhans, "id", "hoten"), "-- Chọn chủ sở hữu --", new { @class = "form-control" })
                                </div>
                            </div>

                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" onclick="fcSaveThuaDat('#ssTachThua')">Đồng ý</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng lại</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="thongtincanhan">
        <h4>Chủ sở hữu là những ai?</h4>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ChuSoHuuModal" onclick="{ $('#chusohuu #txtid').val('');$('#chusohuu #txthoten').val(''); }">
            Thêm chủ sở hữu
        </button>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Họ tên</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>CCCD/CMND</th>
                    <th>Ngày cấp</th>
                    <th>Nơi cấp</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.ThongTinCaNhans as ThongTinCaNhan[])
                {
                    <tr id="@item.id">
                        <td>@item.hoten</td>
                        <td>@item.gioitinh</td>
                        <td>@(item.ngaysinh.HasValue?item.ngaysinh.Value.ToString("dd/MM/yyyy") : null) </td>
                        <td>@item.sogiayto</td>
                        <td>@(item.ngaycap_gt.HasValue?item.ngaysinh.Value.ToString("dd/MM/yyyy") : null) </td>
                        <td>@item.noicap_gt</td>
                        <td>
                            <a href='#' data-toggle="modal" data-target="#ChuSoHuuModal" onclick="EditChuSoHuu(@item.id)">Sửa</a> |
                            <a href='#' onclick="XoaChuSoHuu(@item.id)">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="modal" tabindex="-1" role="dialog" id="ChuSoHuuModal" aria-labelledby="CSHModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="CSHModalLabel">Chủ sở hữu</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Đóng lại">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-horizontal">
                            <input type="hidden" id="txtid" />
                            <input type="hidden" id="txtinfomation_id" value="@Model.id" />
                            <input type="hidden" id="txttype" value="@((int)XInfomation.eService.TachThua)" />

                            <div class="form-group">
                                @Html.Label("Họ tên", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txthoten" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Ngày sinh", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtngaysinh" class="form-control datetime" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Loại giấy tờ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input class="btn-check" name="rdoloaigiayto" type="radio" checked id="txtCCCD" value="CCCD" />
                                    <label class="btn btn-outline-primary" for="txtCCCD">Căn cước công dân</label>
                                    <input class="btn-check" name="rdoloaigiayto" type="radio" id="txtCMND" value="CMND" />
                                    <label class="btn btn-outline-primary" for="txtCMND">Chứng minh nhân dân</label>
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Số giấy tờ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtsogiayto" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Giới tính", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input class="btn-check" name="rdogioitinh" type="radio" checked id="txtNam" value="Nam" />
                                    <label class="btn btn-outline-primary" for="txtNam">Nam</label>
                                    <input class="btn-check" name="rdogioitinh" type="radio" id="txtNu" value="Nữ" />
                                    <label class="btn btn-outline-primary" for="txtNu">Nữ</label>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("HKTT", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txthktt" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Ngày cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtngaycap_gt" class="form-control datetime" />
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Nơi cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtnoicap_gt" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Mã số thuế", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input id="txtmasothue" class="form-control" />
                                </div>
                            </div>

                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" onclick="fcSaveCSH('#ssTachThua')">Đồng ý</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng lại</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>