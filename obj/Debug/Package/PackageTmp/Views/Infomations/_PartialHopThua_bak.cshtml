@using NiceHandles.Models
@model NiceHandles.Models.Infomation
<section id="ssHopThua">
    <h4>Hợp từ các thửa đất nào?</h4>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#HopThuaModal" onclick="ThemHopThua()">
        Thêm thửa đất
    </button>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Số thửa</th>
                <th>Tờ bản đồ</th>
                <th>Diện tích</th>
                <th>Chủ sở hữu 1</th>
                <th>Chủ sở hữu 2</th>
                <th>Số hợp đồng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.HopThuas as TachHop[])
            {
                <tr id="@item.id">
                    <td>@item.b_sothua</td>
                    <td>@item.b_tobando</td>
                    <td>@item.b_dientich</td>
                    <td>@item.d_hoten</td>
                    <td>@item.d_hoten1</td>
                    <td>@item.d_sohopdong </td>
                    <td>
                        <a href='#' data-toggle="modal" data-target="#HopThuaModal" onclick="EditHopThua(@item.id)">Sửa</a> |
                        <a href='#' onclick="XoaHopThua(@item.id)">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal" tabindex="-1" role="dialog" id="HopThuaModal" aria-labelledby="HopThuaModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document" style="width: 80%; min-width: 1200px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="HopThuaModalLabel">THỬA ĐẤT</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Đóng lại">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#HopThuaDat">Thửa đất</a></li>
                        <li><a data-toggle="tab" href="#hopChuSoHuu">Chủ sở hữu</a></li>
                        <li style="display: none;"><a data-toggle="tab" href="#tachHopDong">Hợp đồng</a></li>
                    </ul>
                    <div class="tab-content">

                        <input type="hidden" id="txtid" />
                        <input type="hidden" id="txtinfomation_id" value="@Model.id" />

                        <div id="HopThuaDat" class="tab-pane fade in active">
                            <br />
                            <div class="form-horizontal">

                                <div class="form-group">
                                    @Html.Label("Số thửa", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtsothua" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Tờ bản đồ", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txttobando" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Địa chỉ thửa đất", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtdiachithuadat" class="form-control" />
                                    </div>
                                </div>


                                <div class="form-group">
                                    @Html.Label("Diện tích", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtdientich" class="form-control" />
                                    </div>
                                </div>


                                <div class="form-group" style="display:none;">
                                    @Html.Label("Loại biến động", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtd_loaibiendong" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Nội dung biến động", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("txtd_noidungbiendong", new SelectList(XInfomation.sNoidungbiendong), "-- Chọn nội dung --", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Lý do biến động", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("txtd_lydobiendong", new SelectList(XInfomation.sLydobiendong), "-- Chọn lý do --", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Số hợp đồng", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtd_sohopdong" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Nơi công chứng", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtd_noicongchung" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Ngày công chứng", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtd_ngaycongchung" class="form-control datetime" autocomplete="off" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Tiền hợp đồng", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtd_tienhopdong" class="form-control" type="number" />
                                    </div>
                                </div>

                                <div class="form-group" style="display: none;">
                                    @Html.Label("Vị trí thửa đất", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="txtd_vitrithuadat" class="form-control" />
                                    </div>
                                </div>
                                <div style="display: none;">
                                    <div class="form-group">
                                        @Html.Label("Số giấy chứng nhận", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input id="txtsogiaychungnhan" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Số vào sổ", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input id="txtsovaoso" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Ngày cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input id="txtngaycap" class="form-control datetime" autocomplete="off" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Nơi cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input id="txtnoicap" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="hopChuSoHuu" class="tab-pane fade">
                            <div class="form-horizontal">
                                <br />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="text-primary">CHỦ SỞ HỮU 1</p>
                                        <div class="form-group">
                                            @Html.Label("Họ tên", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txthoten" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Ngày sinh", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtngaysinh" class="form-control datetime" autocomplete="off" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Giới tính", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input class="btn-check" name="rdogioitinh" type="radio" checked id="txtNam" value="Nam" />
                                                <label class="btn btn-outline-primary" for="txtNam">Nam</label>
                                                <input class="btn-check" name="rdogioitinh" type="radio" id="txtNu" value="Nữ" />
                                                <label class="btn btn-outline-primary" for="txtNu">Nữ</label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("HKTT", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txthktt" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Loại giấy tờ", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input class="btn-check" name="rdoloaigiayto" type="radio" checked id="txtCCCD" value="CCCD" />
                                                <label class="btn btn-outline-primary" for="txtCCCD">Căn cước công dân</label>
                                                <input class="btn-check" name="rdoloaigiayto" type="radio" id="txtCMND" value="CMND" />
                                                <label class="btn btn-outline-primary" for="txtCMND">Chứng minh nhân dân</label>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            @Html.Label("Số giấy tờ", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtsogiayto" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Ngày cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtngaycap_gt" class="form-control datetime" autocomplete="off" />
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            @Html.Label("Nơi cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtnoicap_gt" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Mã số thuế", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtmasothue" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="text-danger">CHỦ SỞ HỮU 2</p>
                                        <div class="form-group">
                                            @Html.Label("Họ tên", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txthoten1" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Ngày sinh", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtngaysinh1" class="form-control datetime" autocomplete="off" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Loại giấy tờ", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input class="btn-check" name="rdoloaigiayto1" type="radio" checked id="txtCCCD1" value="CCCD" />
                                                <label class="btn btn-outline-primary" for="txtCCCD1">Căn cước công dân</label>
                                                <input class="btn-check" name="rdoloaigiayto1" type="radio" id="txtCMND1" value="CMND" />
                                                <label class="btn btn-outline-primary" for="txtCMND1">Chứng minh nhân dân</label>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            @Html.Label("Số giấy tờ", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtsogiayto1" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Giới tính", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input class="btn-check" name="rdogioitinh1" type="radio" checked id="txtNam1" value="Nam" />
                                                <label class="btn btn-outline-primary" for="txtNam1">Nam</label>
                                                <input class="btn-check" name="rdogioitinh1" type="radio" id="txtNu1" value="Nữ" />
                                                <label class="btn btn-outline-primary" for="txtNu1">Nữ</label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("HKTT", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txthktt1" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Ngày cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtngaycap_gt1" class="form-control datetime" autocomplete="off" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Nơi cấp", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtnoicap_gt1" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Mã số thuế", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                <input id="txtmasothue1" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="hopHopDong" class="tab-pane fade">
                            <br />
                            <div class="form-horizontal">


                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" onclick="fcSaveHopThua()">Đồng ý</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng lại</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>